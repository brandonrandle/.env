" MY SETUP
" Brandon Randle
" github.com/brandonrandle/.env

" Clear compatibility settings
set nocompatible
set noshowmode

" ########## PATHOGEN ##########
execute pathogen#infect()
filetype plugin indent on

" GRUVBOX
set t_Co=256
colorscheme gruvbox
set background=dark

" VIM-AIRLINE
set laststatus=2

" ########## BASIC SETTINGS ##########

" ENCODING
set encoding=utf-8

" KEY MAPPINGS
inoremap jk <ESC>

" SYNTAX HIGHLIGHTING
syntax enable
let python_hightlight_all = 1

" WHITESPACE MANAGEMENT
set tabstop=4
set shiftwidth=4
set expandtab

" LINE NUMBERS
set number
set numberwidth=4
set relativenumber

" MATCHING PAREN/BRACES/BRACKETS
set showmatch

" VISUAL LINE FOR CURSOR
set cursorline

" Set column limit to 80
set colorcolumn=79
set textwidth=79

" ########## FILE SPECIFIC SETTINGS ##########
" Set .md files to mean markdown filetype
au BufNewFile,BufFilePre,BufRead *.md set filetype=markdown

" PYTHON Settings
autocmd BufNewFile,BufRead *.py
    \set tabstop=4
    \set softtabstop=4
    \set shiftwidth=4
    \set autoindent
    \set fileformat=unix

" Set file specific settings for whitespace management
autocmd Filetype html setlocal ts=2 sw=2 
autocmd Filetype markdown setlocal ts=2 sw=2 

" ########## LEARN VIMSCRIPT THE HARD WAY EXERCISES ##########
" Maps - to delete a line and paste it below the current line
map - ddp

" ########## TEMP SETTINGS FOR EXPERIMENTATION ##########
set foldmethod=indent
set foldlevel=99
nnoremap <space> za



