" MY SETUP
" Brandon Randle
" github.com/brandonrandle/.env

" Clear compatibility settings
set nocompatible
set noshowmode

" ########## PATHOGEN ##########
execute pathogen#infect()
filetype plugin indent on

" GRUVBOX
set t_Co=256
colorscheme gruvbox
set background=dark

" VIM-AIRLINE
set laststatus=2

" ########## BASIC SETTINGS ##########

" ENCODING
set encoding=utf-8

" KEY MAPPINGS
inoremap jk <ESC>

" SYNTAX HIGHLIGHTING
syntax enable
let python_hightlight_all = 1

" WHITESPACE MANAGEMENT
set ts=4
set sw=4
set expandtab

" LINE NUMBERS
set number
set numberwidth=4
set relativenumber

" MATCHING PAREN/BRACES/BRACKETS
set showmatch

" VISUAL LINE FOR CURSOR
set cursorline

" Set column limit to 80
set colorcolumn=80

" ########## FILE SPECIFIC SETTINGS ##########
" Set .md files to mean markdown filetype
au BufNewFile,BufFilePre,BufRead *.md set filetype=markdown

" Set file specific settings for whitespace management
autocmd Filetype python setlocal ts=4 sw=4 expandtab
autocmd Filetype html setlocal ts=2 sw=2 expandtab
autocmd Filetype md setlocal ts=2 sw=2 expandtab
autocmd Filetype markdown setlocal ts=2 sw=2 expandtab

" ########## LEARN VIMSCRIPT THE HARD WAY EXERCISES ##########
" Maps - to delete a line and paste it below the current line
map - ddp
